        android:textColor="#FFFFFF"
        android:textSize="32dp"
        app:backgroundTint="#434343"
        app:cornerRadius="50dp"
        app:layout_constraintBottom_toTopOf="@+id/guideline5"
        app:layout_constraintEnd_toEndOf="@+id/buttonSubtract"
